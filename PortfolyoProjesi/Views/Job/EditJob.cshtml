@model PortfolyoProjesi.Models.Tbl_Job
@{
    ViewBag.Title = "EditJob";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid p-4">
    <h2 class="text-light mb-4 pb-2" style="border-bottom: 2px solid rgba(255,255,255,0.1); font-weight: 300; letter-spacing: 1px;">
        <i class="bi bi-briefcase"></i>
        Kariyer / @Model.CompanyName/ Düzenle
    </h2>

    <form method="post">
        @Html.HiddenFor(x => x.JobID)
        <div class="container-fluid p-4">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Start Year</th>
                        <th scope="col">End Year</th>
                        <th scope="col">degree</th>
                        <th scope="col">Company</th>
                        <th scope="col">Description</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="alert alert-light">
                            <input type="date" name="StartYear" id="StartYear" value="@(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy-MM-dd") : "")"
                                   class="form-control" style="background-color: #343A40; color: #F8B908;" />
                        </td>
                        <td>
                            <input type="date" name="EndYear" id="EndYear" value="@(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "")"
                                   class="form-control" style="background-color: #343A40; color: #F8B908;" />
                        </td>
                        <td>@Html.TextAreaFor(x => x.Title, new { @class = "form-control", @id = "exampleFormControlTextarea1", @rows = "15", @style = "background-color: #343A40; color: #F8B908; " })</td>
                        <td>@Html.TextAreaFor(x => x.CompanyName, new { @class = "form-control", @id = "exampleFormControlTextarea1", @rows = "15", @style = "background-color: #343A40; color: #F8B908; " })</td>
                        <td>@Html.TextAreaFor(x => x.Description, new { @class = "form-control", @id = "exampleFormControlTextarea1", @rows = "15", @style = "background-color: #343A40; color: #F8B908; " })</td>
                        <td><button class="btn btn-outline-info">Kaydet</button></td>
                    </tr>
                </tbody>
            </table>
            <a href="~/Job/Index" class="btn btn-outline-danger btn-sm px-3">Vazgeç</a>
        </div>
    </form>
</div>
