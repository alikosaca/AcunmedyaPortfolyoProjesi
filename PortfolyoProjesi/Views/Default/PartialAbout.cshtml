@model PortfolyoProjesi.Models.Tbl_About

<section id="about" class="section dark-background">
	
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center align-items-center">
            <div class="col-lg-4">
                <img src="~/Temaa/assets/img/profile_img.jpg" class="img-fluid rounded" alt="Profil Resmi" style="width: 100%; height: auto; object-fit: cover; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
            </div>
            <div class="col-lg-8 content">
                <h2>@Model.Title</h2>
                <p class="fst-italic py-3">
                    @Model.Description1
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-chevron-right text-warning"></i> <strong>Yaş:</strong> <span>@Model.Age</span></li>
                            <li class="mb-2"><i class="bi bi-chevron-right text-warning"></i> <strong>Phone:</strong> <span>@Model.Phone</span></li>
                            <li class="mb-2"><i class="bi bi-chevron-right text-warning"></i> <strong>City:</strong> <span>@Model.City</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-chevron-right text-warning"></i> <strong>Degree:</strong> <span>Master</span></li>
                            <li class="mb-2"><i class="bi bi-chevron-right text-warning"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                            <li class="mb-2"><i class="bi bi-chevron-right text-warning"></i> <strong>Seviye:</strong> <span>@Model.Degree</span></li>
                        </ul>
                    </div>
                </div>
                <p class="py-3">
                    @Model.Description2
                </p>
            </div>
        </div>

    </div>

</section>

