@model PortfolyoProjesi.Models.Tbl_Educatiton
@{
    ViewBag.Title = "EditEducation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid p-4">
    <h2 class="text-light mb-4 pb-2" style="border-bottom: 2px solid rgba(255,255,255,0.1); font-weight: 300; letter-spacing: 1px;">
        <i class="bi bi-journal-code me-2"></i>
        Eğitim / @Model.Name/ Düzenle
    </h2>

    <form method="post">
        @Html.HiddenFor(x => x.EducationID)
        @Html.HiddenFor(x => x.Section)
        <div class="container-fluid p-4">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Start Year</th>
                        <th scope="col">End Year</th>
                        <th scope="col">School</th>
                        <th scope="col">Description</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="alert alert-light">
                            <input type="date" name="StartYear" id="StartYear" value="@(Model.StartYear.HasValue ? Model.StartYear.Value.ToString("yyyy-MM-dd") : "")" 
                                   class="form-control" style="background-color: #343A40; color: #F8B908;" />
                        </td>
                        <td>
                            <input type="date" name="EndYear" id="EndYear" value="@(Model.EndYear.HasValue ? Model.EndYear.Value.ToString("yyyy-MM-dd") : "")" 
                                   class="form-control" style="background-color: #343A40; color: #F8B908;" />
                        </td>

                        <td>@Html.TextAreaFor(x => x.Name, new { @class = "form-control", @id = "exampleFormControlTextarea1", @rows = "15", @style = "background-color: #343A40; color: #F8B908; " })</td>
                        <td>@Html.TextAreaFor(x => x.Description, new { @class = "form-control", @id = "exampleFormControlTextarea1", @rows = "15", @style = "background-color: #343A40; color: #F8B908; " })</td>
                        <td><button class="btn btn-outline-info">Kaydet</button></td>
                    </tr>
                </tbody>
            </table>
            <a href="~/Education/Index" class="btn btn-outline-danger btn-sm px-3">Vazgeç</a>
        </div>
    </form>
</div>
