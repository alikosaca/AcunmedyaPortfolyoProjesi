@model List<PortfolyoProjesi.Models.Tbl_Educatiton>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid p-4">
    <h2 class="text-light mb-4 pb-2" style="border-bottom: 2px solid rgba(255,255,255,0.1); font-weight: 300; letter-spacing: 1px;">
        <i class="bi bi-backpack4""></i>
        Eğitim
    </h2>

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Start Year</th>
                <th scope="col">End Year</th>
                <th scope="col">School</th>
                <th scope="col">Description</th>
                <th scope="col">Güncelle</th>
                <th scope="col">Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.EducationID</th>
                    <td>@(item.StartYear.HasValue ? item.StartYear.Value.ToString("dd/MM/yyyy") : "")</td>
                    <td>@(item.EndYear.HasValue ? item.EndYear.Value.ToString("dd/MM/yyyy") : "")</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td><a href="~/Education/EditEducation/@item.EducationID" class="btn btn-outline-info btn-sm px-3">Güncelle</a></td>
                    <td><a href="~/Education/DeleteEducation/@item.EducationID" class="btn btn-outline-danger btn-sm px-3">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
<a href="/Education/AddEducation" class="btn btn-outline-warning btn-sm px-3"><i class="bi bi-plus-circle me-3"></i>Ekle</a>
</div>