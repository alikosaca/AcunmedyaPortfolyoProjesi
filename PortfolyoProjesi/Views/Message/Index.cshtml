
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Message</h2>

<div class="container-fluid p-4">
    <h2 class="text-light mb-4 pb-2" style="border-bottom: 2px solid rgba(255,255,255,0.1); font-weight: 300; letter-spacing: 1px;">
        <i class="fa fa-user-circle me-2"></i>
        Hakkımda
    </h2>

    @foreach (var item in Model)
    {
        <div class="card bg-dark text-light mb-4">
            <div class="card-body">
                <div class="mb-3">
                    <h5 class="text-warning">Image</h5>
                    <img src="@item.ImageUrl" />
                </div>

                <div class="mb-3">
                    <h5 class="text-warning">Başlık</h5>
                    <p>@item.Title</p>
                </div>

                <div class="mb-3">
                    <h5 class="text-warning">Açıklama1</h5>
                    <p>@item.Description</p>
                </div>
                <div class="mb-3">
                    <h5 class="text-warning">Açıklama2</h5>
                    <p>@item.Description1</p>
                </div>
                <div class="mb-3">
                    <h5 class="text-warning">Yaş</h5>
                    <p>@item.Age</p>
                </div>
                <div class="mb-3">
                    <h5 class="text-warning">Web Site</h5>
                    <p>@item.Website</p>
                </div>
                <div class="mb-3">
                    <h5 class="text-warning">Telefon Numarası</h5>
                    <p>@item.Phone</p>
                </div>
                <div class="mb-3">
                    <h5 class="text-warning">Şehir</h5>
                    <p>@item.City</p>
                </div>
                <div class="mb-3">
                    <h5 class="text-warning">Email</h5>
                    <p>@item.Email</p>
                </div>
                <div class="mb-3">
                    <h5 class="text-warning">Şehir</h5>
                    <p>@item.City</p>
                </div>
                <div class="mb-3">
                    <h5 class="text-warning">Seviye</h5>
                    <p>@item.Degree</p>
                </div>
                <div class="mt-4">
                    <a href="/About/Edit/@item.AboutID" class="btn btn-warning me-2">
                        <i class="fa fa-pencil"></i> Düzenle
                    </a>

                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a href="/About/Create" class="btn btn-success">
            <i class="fa fa-plus"></i> Yeni Ekle
        </a>
    </div>
</div>