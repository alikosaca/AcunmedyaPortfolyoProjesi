@model List<PortfolyoProjesi.Models.Tbl_Message>
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid p-4">
    <h2 class="text-light mb-4 pb-2" style="border-bottom: 2px solid rgba(255,255,255,0.1); font-weight: 300; letter-spacing: 1px;">
        <i class="bi bi-briefcase"></i>
        Mesajlar
    </h2>

    <ul class="nav nav-underline">
        <li class="nav-item">
            <a class="nav-link text-warning" href="@Url.Action("Index", "Message")">Tümü</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-warning active" href="@Url.Action("NewMessage", "Message")">Yeni</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-warning" href="@Url.Action("OldMessage", "Message")">Okunan</a>
        </li>
    </ul>


    <table class="table table-dark">
        <thead>
            <tr>
                <th>Gönderen</th>
                <th>Konu</th>
                <th>Mesaj</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NameSurname</td>
                    <td>@item.Subject</td>
                    <td>@item.MessageContent</td>
                    <td><span class="btn btn-outline-success btn-sm px-3">Yeni</span></td>
                    <td>
                        <a href="/Message/DeleteMessage/@item.MessageID" class="btn btn-outline-danger btn-sm px-3">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>