
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid p-4">
    <h2 class="text-light mb-4 pb-2" style="border-bottom: 2px solid rgba(255,255,255,0.1); font-weight: 300; letter-spacing: 1px;">
        <i class="bi bi-briefcase"></i>
        Yetenekler
    </h2>

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Start Year</th>
                <th scope="col">End Year</th>
                <th scope="col">degree</th>
                <th scope="col">Company</th>
                <th scope="col">Description</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.JobID</th>
                    <td>@(item.StartDate.HasValue ? item.StartDate.Value.ToString("dd/MM/yyyy") : "")</td>
                    <td>@(item.EndDate.HasValue ? item.EndDate.Value.ToString("dd/MM/yyyy") : "")</td>
                    <td>@item.Title</td>
                    <td>@item.CompanyName</td>
                    <td>@item.Description</td>
                    <td><a href="~/Job/EditJob/@item.JobID" class="btn btn-outline-info btn-sm px-3">Güncelle</a></td>
                    <td><a href="~/Job/DeleteJob/@item.JobID" class="btn btn-outline-danger btn-sm px-3">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="~/Job/AddJob" class="btn btn-outline-warning btn-sm px-3"><i class="bi bi-plus-circle me-3"></i>Ekle</a>
</div>

